---
import { getEntry } from 'astro:content';
import CallToAction from "./CallToAction.astro";

const heroEntry = await getEntry('config', 'hero');
const config = heroEntry.data;
---

<header class="hero-section">
  <div class="container is-fluid">
    <div class="hero-content">
      <!-- Title and Logo Row -->
      <div class="hero-main">
        <div class="hero-text">
          <h1 class="hero-title">
            {config.title.prefix}
            <br />
            <span class="is-color-primary highlight">{config.title.highlight}</span>
            <br />
            {config.title.suffix}
          </h1>
        </div>

        <div class="hero-logo is-hidden-touch">
          <img
            src={config.logo.src}
            alt={config.logo.alt}
            width={config.logo.width}
            height={config.logo.height}
            loading="eager"
          />
        </div>
      </div>

      <!-- Tagline -->
      <div class="hero-tagline">
        <p class="tagline-text is-size-4">
          {config.tagline}
        </p>
      </div>

      <!-- Call to Action -->
      <CallToAction
        primaryText={config.cta.primary.text}
        primaryUrl={config.cta.primary.url}
        primaryExternal={config.cta.primary.external}
        secondaryText={config.cta.secondary?.text}
        secondaryUrl={config.cta.secondary?.url}
        secondaryExternal={config.cta.secondary?.external}
      />
    </div>
  </div>
</header>

<style lang="scss">
  .hero-section {
    padding: 2rem 0;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;

    @media screen and (max-width: 768px) {
      flex-direction: column;
      text-align: center;
    }
  }

  .hero-text {
    flex: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 5rem);
    font-family: "Rubik", sans-serif;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    animation: fadeInUp 0.8s ease-out both;

    .highlight {
      display: inline-block;
      position: relative;
    }
  }

  .hero-logo {
    flex-shrink: 0;
    animation: fadeInScale 1s ease-out 0.3s both;

    img {
      max-width: 100%;
      height: auto;
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
    }
  }

  .hero-tagline {
    max-width: 700px;
    animation: fadeInUp 0.8s ease-out 0.2s both;

    @media screen and (max-width: 768px) {
      text-align: center;
      margin: 0 auto;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .tagline-text {
    color: var(--bulma-text, #4a4a4a);
    line-height: 1.6;
    margin: 0;
  }
</style>
