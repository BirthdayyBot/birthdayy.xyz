---
import { getCollection } from 'astro:content';
import FeatureTag from "./FeatureTag.astro";

const featureTagsCollection = await getCollection('featureTags');
const featureTags = featureTagsCollection.map(entry => entry.data);
---

<div class="columns is-centered">
  <div class="column is-5">
    <div class="tags is-centered">
      {featureTags.map((tag) => (
        <FeatureTag label={tag.label} category={tag.category} />
      ))}
    </div>
  </div>
</div>
