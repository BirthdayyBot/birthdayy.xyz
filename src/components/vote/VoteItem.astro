---
import { NewTab } from "../ui/Icon.jsx";

const { name, url, icon } = Astro.props;
---

<div class="vote_element column is-6">
  <a href={url} target="_blank" style="text-decoration: inherit; color: inherit;">
    <div class="hoverEffect">
      <article class="notification is-primary">
        <div class="columns is-vcentered is-mobile">
          <!-- HIDDEN MOBILE -->
          <div class="column is-3 is-hidden-touch">
            <figure class="image">
              <img
                src={icon}
                width="80"
                height="80"
                alt="Placeholder image"
                class="site_logo"
              />
            </figure>
          </div>

          <div class="column is-3 is-hidden-desktop">
            <figure class="image">
              <img
                src={icon}
                width="120"
                height="120"
                alt="Placeholder image"
                class="site_logo"
              />
            </figure>
          </div>

          <div class="column is-6">
            <span class="icon-text">
              <span>
                <h4 class="is-title">{name}</h4>
              </span>
              <span class="icon is-medium is-hidden-touch">
                <NewTab color="currentColor" size="4em" client:load />
              </span>
            </span>
          </div>
        </div>
      </article>
    </div>
  </a>
</div>

<style lang="scss">
  @media (min-height: 0px) and (max-height: 1100px) {
    .vote_element {
      min-height: 32rem;
    }
  }

  @media (min-height: 1101px) {
    .vote_element {
      min-height: 35rem;
    }
  }

  .hoverEffect {
    transition: all 0.3s ease-in-out;

    &:hover {
      transform: scale(1.05);
      box-shadow: 0 0 50px #78c2ad, 0 0 20px #fdfdfd;
      cursor: pointer;
    }
  }
</style>
